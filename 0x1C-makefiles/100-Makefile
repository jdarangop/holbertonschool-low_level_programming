CC = gcc -Wall -Werror -Wextra -pedantic
SRC =m.h  main.c holberton.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
#RM = rm -f
#CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
